{
  "name": "cfhelper",
  "displayName": "CF Helper",
  "description": "Codeforces helper",
  "version": "0.0.2",
  "publisher": "psucoder",
  "license": "MIT",
  "engines": {
    "vscode": "^1.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/psucodervn/cfhelper"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.parseContest",
        "title": "Parse Contest",
        "category": "CF Helper"
      },
      {
        "command": "extension.login",
        "title": "Login",
        "category": "CF Helper"
      },
      {
        "command": "extension.logout",
        "title": "Logout",
        "category": "CF Helper"
      },
      {
        "command": "extension.submit",
        "title": "Submit current file",
        "category": "CF Helper"
      }
    ],
    "configuration": {
      "title": "CF Helper configuration",
      "properties": {
        "cfhelper": {
          "description": "CF Helper common settings",
          "default": {
            "src": "src",
            "out": "out",
            "tmp": "tmp",
            "language": "c++14",
            "templates": "templates"
          }
        },
        "cfhelper.languages": {
          "description": "CF Helper languages config map",
          "default": {
            "c++14": {
              "main": "main",
              "ext": "cpp",
              "template": "main.cpp.tmpl"
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.8",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/node-fetch": "^2.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "node-fetch": "^2.1.2"
  }
}
